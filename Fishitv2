-- one-liner bootstrap (client)
loadstring(game:HttpGet("https://raw.githubusercontent.com/rendy45kz/vir/refs/heads/main/guilibs.lua"))()  -- ini harus mengembalikan table UIPremium (module 'return UIPremium')

-- setelah module terpanggil, ia biasanya meng-return lib. 
-- beberapa executor menjalankan loadstring tanpa return, jadi kita guard:
local ok, UIPremium = pcall(function()
    return require(game:GetService("ReplicatedStorage"):WaitForChild("UIPremium"))
end)
if not ok or type(UIPremium) ~= "table" then
    -- kalau module nggak ada di ReplicatedStorage, coba minta loader mengembalikan global
    UIPremium = rawget(getgenv and getgenv() or _G, "UIPremium") or _G.UIPremium
end
assert(type(UIPremium)=="table", "[UIPremium] Library belum ter-load. Pastikan URL raw mengembalikan module 'return UIPremium'.")

-- coba mount ke CoreGui (akan sukses di Studio/Plugin), kalau gagal fallback ke PlayerGui
local screen = (UIPremium.CreateCoreScreen and UIPremium.CreateCoreScreen("MyUILib")) 
            or UIPremium.CreateScreen("MyUILib")

-- bikin window bergaya “Vanis-style” (window + tabs + sections)
local win = UIPremium.CreateWindow({
    Title = "My UI Library",
    SubTitle = "client demo",
    Size = Vector2.new(780, 480),
})

-- Tab 1: General
local TabGeneral = win:CreateTab("General")
local SecControls = TabGeneral:AddSection("Controls")
SecControls:AddToggle("Enabled", true, function(v) print("Enabled:", v) end)
SecControls:AddSlider("Opacity", 0.5, function(v) print("Opacity:", math.floor(v*100).."%") end)
SecControls:AddDropdown("Quality", {"Low","Medium","High"}, {Value=2,Open=false}, function(i) print("Quality:", i) end)
SecControls:AddTextbox("Nickname", "Type here", function(txt) print("Nick:", txt) end)
SecControls:AddKeybind("Toggle UI", Enum.KeyCode.RightShift, function(key) print("Key:", key.Name) end)
SecControls:AddButton("Show Toast", function() UIPremium.Toast("Hello from client!") end)

-- Tab 2: Visuals
local TabVisuals = win:CreateTab("Visuals")
local SecESP = TabVisuals:AddSection("ESP")
SecESP:AddToggle("Boxes", true)
SecESP:AddToggle("Tracers", false)
SecESP:AddSlider("Thickness", 0.3)

-- Tab 3: Config
local TabConfig = win:CreateTab("Config")
local SecProfile = TabConfig:AddSection("Profile")
SecProfile:AddButton("Save Config", function()
    UIPremium.Toast("Config saved", "success")
    -- opsional (butuh environment writefile):
    UIPremium.TrySaveConfig("myui/config.json", '{"ok":true}')
end)

-- contoh tooltip (opsional) — tampilkan di atas tombol “Show Toast”
-- (kamu bisa simpan handle dari AddButton kalau mau pasangi tooltip ke instance-nya)

print("[UIPremium] Client demo loaded.")
