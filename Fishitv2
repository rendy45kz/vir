local islandList = {} for n,_ in pairs(islands) do table.insert(islandList, n) end table.sort(islandList)

local function getHRP()
    local chars = Workspace:FindFirstChild("Characters")
    if chars then
        local ch = chars:FindFirstChild(LocalPlayer.Name)
        if ch then
            local hrp = ch:FindFirstChild("HumanoidRootPart") or ch:FindFirstChildWhichIsA("BasePart")
            if hrp then return hrp end
        end
    end
    local ch = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    return ch and (ch:FindFirstChild("HumanoidRootPart") or ch:FindFirstChildWhichIsA("BasePart")) or nil
end

local function tpTo(pos)
    if not pos then return end
    local hrp = getHRP()
    if hrp then hrp.CFrame=CFrame.new(pos+Vector3.new(0,4,0)) end
end

-- Prompt helpers (Shop/Event generic)
local function fireNearestPrompt(filterFn,maxDist)
    maxDist=maxDist or 120
    local hrp=getHRP(); if not hrp then return false end
    local best,dist
    for _,d in ipairs(Workspace:GetDescendants()) do
        if d:IsA("ProximityPrompt") then
            local ok,use=pcall(function() return filterFn(d) end)
            if ok and use then
                local p; if d.Parent and d.Parent:IsA("BasePart") then p=d.Parent.Position end
                if not p and d.Parent and d.Parent.Parent and d.Parent.Parent:IsA("BasePart") then p=d.Parent.Parent.Position end
                if p then local dd=(p-hrp.Position).Magnitude; if dd<=maxDist and (not dist or dd<dist) then best=d; dist=dd end end
            end
        end
    end
    if best then pcall(function() fireproximityprompt(best,5) end); return true end
    return false
end
local function openShopByKeyword(keys)
    keys=keys or {}
    return fireNearestPrompt(function(pp)
        local t=(pp.ObjectText or "").." "..(pp.ActionText or ""); t=string.lower(t)
        for _,k in ipairs(keys) do if string.find(t,string.lower(k),1,true) then return true end end
        local n=(pp.Parent and pp.Parent.Name or ""); n=string.lower(n)
        for _,k in ipairs(keys) do if string.find(n,string.lower(k),1,true) then return true end end
        return false
    end,200)
end

-- ================= Event helpers (dynamic & robust) =================
local staticEvents = { "Admin Event","Shark Hunt","Ghost Shark Hunt","Worm Hunt","Black Hole","Shocked","Ghost Worm","Meteor Rain" }

local function findPropsContainer()
    if Workspace:FindFirstChild("Props") then return Workspace.Props end
    for _,inst in ipairs(Workspace:GetDescendants()) do
        if (inst:IsA("Folder") or inst:IsA("Model")) and string.lower(inst.Name) == "props" then
            return inst
        end
    end
    return nil
end
local function findEventNode(props, evName)
    local node = props:FindFirstChild(evName)
    if node then return node end
    local low = string.lower(evName)
    for _,child in ipairs(props:GetChildren()) do
        if string.find(string.lower(child.Name), low, 1, true) then
            return child
        end
    end
    return nil
end
local function findBoatCFrame(eventNode)
    local boat = eventNode:FindFirstChild("Fishing Boat")
    if boat then
        if boat.GetPivot then return boat:GetPivot() end
        if boat:IsA("BasePart") then return boat.CFrame end
        local p = boat:FindFirstChildWhichIsA("BasePart", true); if p then return p.CFrame end
    end
    for _,d in ipairs(eventNode:GetDescendants()) do
        if (d:IsA("Model") or d:IsA("BasePart")) and string.find(string.lower(d.Name),"boat",1,true) then
            if d.GetPivot then return d:GetPivot() end
            if d:IsA("BasePart") then return d.CFrame end
            local p = d:FindFirstChildWhichIsA("BasePart", true); if p then return p.CFrame end
        end
    end
    if eventNode.GetPivot then return eventNode:GetPivot() end
    local any = eventNode:FindFirstChildWhichIsA("BasePart", true)
    return any and any.CFrame or nil
end
local function tpToEventByName(evName)
    local props = findPropsContainer()
    if not props then return false, "Props not found" end
    local node = findEventNode(props, evName)
    if not node then return false, "Event node not found" end
    local cf = findBoatCFrame(node); if not cf then return false, "Boat/Pivot not found" end
    local hrp = getHRP(); if not hrp then return false, "HRP missing" end
    hrp.CFrame = cf + Vector3.new(0,15,0)
    return true
end
local function discoverEvents()
    local props = findPropsContainer()
    local set = {}
    if props then for _,child in ipairs(props:GetChildren()) do
        if (child:IsA("Folder") or child:IsA("Model")) and #child.Name>=3 then set[child.Name]=true end
    end end
    if next(set)==nil then for _,n in ipairs(staticEvents) do set[n]=true end end
    local list = {} for k in pairs(set) do table.insert(list,k) end table.sort(list); return list
end

