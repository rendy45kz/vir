local net -- sleitnick/net folder (dipakai oleh fitur dari skrip WindUI)
pcall(function()
    net = ReplicatedStorage:WaitForChild("Packages")
        :WaitForChild("_Index")
        :WaitForChild("sleitnick_net@0.2.0")
        :WaitForChild("net")
end)

-- ====== Remotes/Anim yang dibutuhkan (aman bila tidak ada) ======
local rodRemote, miniGameRemote, finishRemote
pcall(function()
    rodRemote       = net:WaitForChild("RF/ChargeFishingRod",5)
    miniGameRemote  = net:WaitForChild("RF/RequestFishingMinigameStarted",5)
    finishRemote    = net:WaitForChild("RE/FishingCompleted",5)
end)

local character = Players.LocalPlayer.Character or Players.LocalPlayer.CharacterAdded:Wait()
local humanoid  = character:WaitForChild("Humanoid")
local animator  = humanoid:FindFirstChildOfClass("Animator") or Instance.new("Animator", humanoid)

local RodIdleAnim, RodReelAnim, RodShakeAnim
pcall(function()
    local RodIdle = ReplicatedStorage:WaitForChild("Modules"):WaitForChild("Animations"):WaitForChild("FishingRodReelIdle")
    local RodReel = ReplicatedStorage:WaitForChild("Modules"):WaitForChild("Animations"):WaitForChild("EasyFishReelStart")
    local RodShake= ReplicatedStorage:WaitForChild("Modules"):WaitForChild("Animations"):WaitForChild("CastFromFullChargePosition1Hand")
    RodShakeAnim = animator:LoadAnimation(RodShake)
    RodIdleAnim  = animator:LoadAnimation(RodIdle)
    RodReelAnim  = animator:LoadAnimation(RodReel)
end)

-- ====== State & Delay mapping (diambil dari skrip sumber) ======
local Flags = {
    AutoFishV2 = false,
    PerfectCast = true,
    AutoSell = false,
    AutoFavourite = false,
}

local RodDelaysV2 = {
    ["Ares Rod"] = {custom = 1.12, bypass = 1.45},
    ["Angler Rod"] = {custom = 1.12, bypass = 1.45},
    ["Ghostfinn Rod"] = {custom = 1.12, bypass = 1.45},
    ["Astral Rod"] = {custom = 1.9,  bypass = 1.45},
    ["Chrome Rod"] = {custom = 2.3,  bypass = 2.00},
    ["Steampunk Rod"] = {custom = 2.5,  bypass = 2.30},
    ["Lucky Rod"] = {custom = 3.5,  bypass = 3.60},
    ["Midnight Rod"]= {custom = 3.3,  bypass = 3.40},
    ["Demascus Rod"]= {custom = 3.9,  bypass = 3.80},
    ["Grass Rod"]  = {custom = 3.8,  bypass = 3.90},
    ["Luck Rod"]   = {custom = 4.2,  bypass = 4.10},
    ["Carbon Rod"] = {custom = 4.0,  bypass = 3.80},
    ["Lava Rod"]   = {custom = 4.2,  bypass = 4.10},
    ["Starter Rod"]= {custom = 4.3,  bypass = 4.20},
}
local customDelayV2   = 1
local BypassDelayV2   = 0.5
local fishingActiveV2 = false
local delayInitializedV2 = false

local function getValidRodNameV2()
    local ok, display = pcall(function()
        return Players.LocalPlayer.PlayerGui:WaitForChild("Backpack",5):WaitForChild("Display",5)
    end)
    if not ok or not display then return nil end
    for _, tile in ipairs(display:GetChildren()) do
        local success, label = pcall(function() return tile.Inner.Tags.ItemName end)
        if success and label and label:IsA("TextLabel") then
            local name = label.Text
            if RodDelaysV2[name] then return name end
        end
    end
    return nil
end

local function updateDelayBasedOnRodV2()
    if delayInitializedV2 then return end
    local rodName = getValidRodNameV2()
    if rodName and RodDelaysV2[rodName] then
        customDelayV2 = RodDelaysV2[rodName].custom
        BypassDelayV2 = RodDelaysV2[rodName].bypass
    else
        customDelayV2 = 10
        BypassDelayV2 = 1
    end
    delayInitializedV2 = true
end

-- ====== Auto Sell (threshold non-favorited) ======
local lastSellTime = 0
local AUTO_SELL_THRESHOLD = 60       -- kamu bisa ubah di UI
local AUTO_SELL_DELAY     = 60

local function startAutoSell()
    task.spawn(function()
        while Flags.AutoSell do
            pcall(function()
                if not Replion then return end
                local DataReplion = Replion.Client:WaitReplion("Data")
                local items = DataReplion and DataReplion:Get({"Inventory","Items"})
                if type(items) ~= "table" then return end

                local unfavoritedCount = 0
                for _, item in ipairs(items) do
                    if not item.Favorited then
                        unfavoritedCount = unfavoritedCount + (item.Count or 1)
                    end
                end

                if unfavoritedCount >= AUTO_SELL_THRESHOLD and os.time() - lastSellTime >= AUTO_SELL_DELAY then
                    if net then
                        local sellFunc = net:FindFirstChild("RF/SellAllItems")
                        if sellFunc then
                            pcall(function() sellFunc:InvokeServer() end)
                            lastSellTime = os.time()
                        end
                    end
                end
            end)
            task.wait(10)
        end
    end)
end

-- ====== Auto Favourite (tier Secret/Mythic/Legendary) ======
local allowedTiers = { Secret=true, Mythic=true, Legendary=true }

local function startAutoFavourite()
    task.spawn(function()
        while Flags.AutoFavourite do
            pcall(function()
                if not Replion or not ItemUtility then return end
                local DataReplion = Replion.Client:WaitReplion("Data")
                local items = DataReplion and DataReplion:Get({"Inventory","Items"})
                if type(items) ~= "table" then return end
                for _, item in ipairs(items) do
                    local base = ItemUtility:GetItemData(item.Id)
                    if base and base.Data and allowedTiers[base.Data.Tier] and not item.Favorited then
                        -- tandai lokal; jika game butuh remote khusus, tinggal ganti di sini
                        item.Favorited = true
                    end
                end
            end)
            task.wait(5)
        end
    end)
end

-- ====== Auto Fish V2 (porting dari skrip sumber) ======
-- event “RE/ReplicateTextEffect” -> cepat selesaikan minigame (spam finish)
pcall(function()
    local textEffect = ReplicatedStorage.Packages._Index["sleitnick_net@0.2.0"].net["RE/ReplicateTextEffect"]
    textEffect.OnClientEvent:Connect(function(data)
        if Flags.AutoFishV2 and fishingActiveV2
        and data and data.TextData and data.TextData.EffectType == "Exclaim" then
            local head = Players.LocalPlayer.Character and Players.LocalPlayer.Character:FindFirstChild("Head")
            if head and data.Container == head and finishRemote then
                task.spawn(function()
                    for _ = 1, 3 do
                        task.wait(BypassDelayV2)
                        pcall(function() finishRemote:FireServer() end)
                    end
                end)
            end
        end
    end)
end)

local function StartAutoFishV2()
    if Flags.AutoFishV2 then return end
    Flags.AutoFishV2 = true
    delayInitializedV2 = false
    updateDelayBasedOnRodV2()

    task.spawn(function()
        while Flags.AutoFishV2 do
            pcall(function()
                fishingActiveV2 = true

                -- equip rod slot 1 (sesuai skrip sumber)
                local equipRemote = net and net:FindFirstChild("RE/EquipToolFromHotbar")
                if equipRemote then equipRemote:FireServer(1) end
                task.wait(0.1)

                -- charge
                local timestamp = workspace:GetServerTimeNow()
                if RodShakeAnim then RodShakeAnim:Play() end
                if rodRemote then rodRemote:InvokeServer(timestamp) end

                -- perfect cast koordinat
                local baseX, baseY = -0.7499996423721313, 1
                local x,y
                if Flags.PerfectCast then
                    x = baseX + (math.random(-500, 500) / 10000000)
                    y = baseY + (math.random(-500, 500) / 10000000)
                else
                    x = math.random(-1000, 1000) / 1000
                    y = math.random(0, 1000) / 1000
                end

                if RodIdleAnim then RodIdleAnim:Play() end
                if miniGameRemote then miniGameRemote:InvokeServer(x, y) end

                task.wait(customDelayV2)
                fishingActiveV2 = false
            end)
            task.wait(0.05)
        end
    end)
end

local function StopAutoFishV2()
    Flags.AutoFishV2 = false
    fishingActiveV2 = false
    delayInitializedV2 = false
    pcall(function() if RodIdleAnim then RodIdleAnim:Stop() end end)
    pcall(function() if RodShakeAnim then RodShakeAnim:Stop() end end)
    pcall(function() if RodReelAnim then RodReelAnim:Stop() end end)
end

-- ====================== UI: FARM =======================
PageFarm:CreateLabel("FARMING")
local tgAutoFish = PageFarm:CreateToggle("Auto Fish V2 (Optimized)","Otomatis memancing dengan timing rod", function(on)
    if on then StartAutoFishV2() else StopAutoFishV2() end
end)
local tgPerfect  = PageFarm:CreateToggle("Auto Perfect Cast","Usahakan selalu perfect", function(on)
    Flags.PerfectCast = on
end)

local boxBypass  = PageFarm:CreateBox("Bypass Delay (ex: 1.45)", nil, function(txt)
    local n = tonumber(txt)
    if n then BypassDelayV2 = n end
end)

local tgAutoSell = PageFarm:CreateToggle("Auto Sell Fish","Jual otomatis saat jumlah non-favorite >= threshold", function(on)
    Flags.AutoSell = on
    if on then startAutoSell() end
end)

local boxThreshold = PageFarm:CreateBox("Sell Threshold (default 60)", nil, function(txt)
    local n = tonumber(txt)
    if n then AUTO_SELL_THRESHOLD = math.max(1, math.floor(n)) end
end)

local tgAutoFav  = PageFarm:CreateToggle("Auto Favorite Fish","Favoritkan Secret/Mythic/Legendary", function(on)
    Flags.AutoFavourite = on
    if on then startAutoFavourite() end
end)

-- ================== REFRESH DINAMIS (players list) =================
task.spawn(function()
    while true do
        task.wait(8)
        plDD:SetOptions(playersList())
    end
end)
