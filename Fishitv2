local function scanNPC()
    local s={} for _,m in ipairs(Workspace:GetDescendants()) do
        if m:IsA("Model") then
            local hasHum=m:FindFirstChildOfClass("Humanoid"); local hasPrompt=false
            for _,d in ipairs(m:GetDescendants()) do if d:IsA("ProximityPrompt") then hasPrompt=true break end end
            if (hasHum or hasPrompt) and #m.Name>=3 then s[m.Name]=true end
        end
    end
    local t={} for k in pairs(s) do table.insert(t,k) end table.sort(t); return t
end
local function tpNearestModel(partial)
    local hrp=getHRP(); if not hrp then return end
    local best,dist
    for _,m in ipairs(Workspace:GetDescendants()) do
        if m:IsA("Model") and string.find(string.lower(m.Name),string.lower(partial),1,true) then
            local p=m:FindFirstChild("HumanoidRootPart") or m:FindFirstChildWhichIsA("BasePart")
            if p then local d=(p.Position-hrp.Position).Magnitude; if not dist or d<dist then best=p; dist=d end end
        end
    end
    if best then tpTo(best.Position) end
end
local npcDD = PageTP:CreateDropdown("Teleport NPC", scanNPC(), function(nm) if nm then tpNearestModel(nm) end end)
task.spawn(function() while true do task.wait(8) npcDD:SetOptions(scanNPC()) end end)

local function playersList() local t={} for _,pl in ipairs(Players:GetPlayers()) do if pl~=LocalPlayer then table.insert(t,pl.Name) end end table.sort(t); return t end
local plDD = PageTP:CreateDropdown("Teleport Player", playersList(), function(nm)
    local p=Players:FindFirstChild(nm); if p and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then tpTo(p.Character.HumanoidRootPart.Position) end
end)
Players.PlayerAdded:Connect(function() plDD:SetOptions(playersList()) end)
Players.PlayerRemoving:Connect(function() plDD:SetOptions(playersList()) end)
if game.PlaceId ~= TARGET_PLACE then
    PageTP:CreateButton("Teleport ke Fish It","Masuk ke game Fish It",function() TeleportService:Teleport(TARGET_PLACE,LocalPlayer) end)
end

-- Event
local statusLbl = PageEvent:CreateLabel("EVENT WATCH • INITIALIZING...")
local SELECTED_EVENTS = {}

local ddEventSingle = PageEvent:CreateDropdown("Event Teleport (Manual)", discoverEvents(), function(opt)
    local ok, why = tpToEventByName(opt)
    statusLbl:UpdateLabel(string.upper(ok and ("EVENT WATCH • TELEPORTED: "..opt) or ("EVENT WATCH • "..tostring(why or "FAILED"))))
end)

local multi = PageEvent:CreateMultiDropdown("Select Events", discoverEvents(), function(set) SELECTED_EVENTS=set or {} end)
PageEvent:CreateToggle("Auto Teleport Selected Events","Otomatis teleport ke event aktif sesuai pilihan", function(v)
    state.AUTO_EVENT_ON = v
end)

-- refresh options events berkala
task.spawn(function()
    while true do
        task.wait(8)
        local fresh = discoverEvents()
        if ddEventSingle and ddEventSingle.SetOptions then ddEventSingle:SetOptions(fresh) end
        if multi and multi.SetOptions then multi:SetOptions(fresh) end
    end
end)

-- worker auto event
task.spawn(function()
    while true do
        if state.AUTO_EVENT_ON then
            local props = findPropsContainer()
            local teleported=false
            if props then
                for ev,_ in pairs(SELECTED_EVENTS) do
                    local node = findEventNode(props, ev)
                    if node then
                        local cf = findBoatCFrame(node)
                        if cf then
                            local ok = tpToEventByName(ev)
                            if ok then
                                teleported=true
                                statusLbl:UpdateLabel(string.upper("EVENT WATCH • TELEPORTED: "..ev))
                                break
                            end
                        end
                    end
                end
                if not teleported then
                    statusLbl:UpdateLabel(string.upper("EVENT WATCH • WAITING (NO MATCHING EVENT)"))
                end
            else
                statusLbl:UpdateLabel(string.upper("EVENT WATCH • PROPS NOT FOUND"))
            end
        end
        task.wait(2)
    end
end)

